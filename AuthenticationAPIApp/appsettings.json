{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[Time:{Timestamp:HH:mm:ss}] [CorrelationId:{CorrelationId}]  [Level:{Level:u3}]{NewLine}  [Process:{ProcessId}] [RequestId:{RequestId}]|[Context:{SourceContext}]{NewLine} [Message:{Message:lj}]{NewLine}{Exception}"

        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "..\\..\\..\\Logs\\AutApp.log",
          "fileSizeLimitBytes": "1000000",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "2",
          "rollOnFileSizeLimit": "true",
          "shared": "true",
          "flushToDiskInterval": "00:00:01",
          "outputTemplate": "[Time:{Timestamp:HH:mm:ss}] [CorrelationId:{CorrelationId}]  [Level:{Level:u3}]{NewLine}  [Process:{ProcessId}] [RequestId:{RequestId}]|[Context:{SourceContext}]{NewLine} [Message:{Message:lj}]{NewLine}{Exception}",

          "restrictedToMinimumLevel": "Information"
        }
      }

    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithCorrelationId", "WithProcessId" ]
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "This is my token admin",
    "Issuer": "issuer",
    "Audience": "audience"
  }
}
